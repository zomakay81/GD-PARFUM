{
  "name": "GDParfum",
  "version": "4.1.0",
  "private": true,
  "main": "electron-main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "electron .",
    "dev:electron": "npm run build && electron .",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.GDParfum",
    "productName": "GDParfum",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron-main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico"
    },
    "mac": {
      "category": "public.app-category.games"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^39.1.2",
    "electron-builder": "^24.13.3",
    "vite": "^7.2.2"
  },
  "dependencies": {
    "@google/genai": "^1.29.1",
    "immer": "^10.2.0",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.553.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "recharts": "^3.4.1",
    "uuid": "^13.0.0"
  }
}
